generator client {
  provider = "prisma-client-js"
  output   = "client/log"
}

datasource db {
  provider  = "mongodb"
  url       = env("DB_URL_LOG")
  directUrl = env("DB_URL_LOG_DIRECT")
}

enum LogType {
  INFO
  DEBUG
  ERROR
}

model Log {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  timestamp DateTime  @default(now())
  type      LogType
  message   String
}
